{
  "manifest_version": 3,
  "name": "Sticky Note Overlay",
  "version": "1.0",
  "description": "Draggable sticky note for screen sharing.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}